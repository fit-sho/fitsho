// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  age       Int?
  height    Int?
  weight    Int?
  sex       String?
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  trainerTemplates WorkoutTemplates[] @relation("TrainerTemplates")
  createdTemplates WorkoutTemplates[] @relation("CreatedTemplates")
  userWorkouts     UserWorkouts[]
  clientTrainer    ClientTrainer[] @relation("Client")
  trainer          ClientTrainer[] @relation("Trainer")
  progress         Progress[]

  @@map("users")
}

model ClientTrainer {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  trainerId String   @map("trainer_id") @db.ObjectId
  clientId  String   @map("client_id") @db.ObjectId

  assignedAt DateTime @default(now()) @map("assigned_at")

  // Relations
  trainer Users @relation("Trainer", fields: [trainerId], references: [id], onDelete: Cascade)
  client  Users @relation("Client", fields: [clientId], references: [id], onDelete: Cascade)

  @@map("client_trainers")
}

model Exercises {
  id               String         @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  description      String
  steps            String[]       // Array of step-by-step instructions
  muscleGroups     MuscleGroup[]
  videoUrl         String?
  imageUrl         String?
  recommendedSets  Int?           @default(4)
  recommendedReps  String?        @default("8-12")
  difficulty       String?        @default("Intermediate") // Beginner, Intermediate, Advanced
  equipment        String?        // Barbell, Dumbbell, Bodyweight, Machine, etc.
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  
  // Relations
  workoutExercises WorkoutExercises[]
  templateExercises TemplateExercises[]
  progress         Progress[]

  @@map("exercises")
}

model WorkoutTemplates {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  trainerId   String?  @map("trainer_id") @db.ObjectId
  createdById String   @map("created_by_id") @db.ObjectId
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  trainer           Users?           @relation("TrainerTemplates", fields: [trainerId], references: [id], onDelete: Cascade)
  createdBy         Users            @relation("CreatedTemplates", fields: [createdById], references: [id], onDelete: Cascade)
  templateExercises TemplateExercises[]
  userWorkouts      UserWorkouts[]

  @@map("workout_templates")
}

model TemplateExercises {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  templateId String @map("template_id") @db.ObjectId
  exerciseId String @map("exercise_id") @db.ObjectId
  sets       Int
  reps       Int
  orderIndex Int    @map("order_index")

  // Relations
  template WorkoutTemplates @relation(fields: [templateId], references: [id], onDelete: Cascade)
  exercise Exercises        @relation(fields: [exerciseId], references: [id])

  @@map("template_exercises")
}

model UserWorkouts {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  userId     String    @map("user_id") @db.ObjectId
  templateId String?   @map("template_id") @db.ObjectId
  date       DateTime  @default(now())
  notes      String?
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  // Relations
  user             Users           @relation(fields: [userId], references: [id], onDelete: Cascade)
  template         WorkoutTemplates?  @relation(fields: [templateId], references: [id])
  workoutExercises WorkoutExercises[]
  progress         Progress[]

  @@map("user_workouts")
}

model Progress {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @map("user_id") @db.ObjectId
  workoutId String   @map("workout_id") @db.ObjectId
  exerciseId String   @map("exercise_id") @db.ObjectId
  metrics   Json   @map("metrics")   // multiple metrics, e.g., { "weight": 100, "reps": 3, "time": 30 }
  date      DateTime @default(now())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user Users @relation(fields: [userId], references: [id], onDelete: Cascade)
  workout UserWorkouts @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise Exercises @relation(fields: [exerciseId], references: [id], onDelete: Cascade)

  @@map("progress")
}

enum Role {
  CLIENT
  TRAINER
  ADMIN
}

enum MuscleGroup {
  CHEST
  BACK
  SHOULDERS
  BICEPS
  TRICEPS
  LEGS
  GLUTES
  CORE
  CARDIO
}

model WorkoutExercises {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  workoutId  String   @map("workout_id") @db.ObjectId
  exerciseId String   @map("exercise_id") @db.ObjectId
  sets       Int
  reps       Int
  weight     Float?
  notes      String?
  orderIndex Int      @map("order_index")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Relations
  workout  UserWorkouts @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise Exercises    @relation(fields: [exerciseId], references: [id])

  @@map("workout_exercises")
}
